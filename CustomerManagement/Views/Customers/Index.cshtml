@model IEnumerable<CustomerManagement.Models.Customer>

@{
    ViewData["Title"] = "Index";
}
<div class="d-inline-flex justify-content-between align-items-center">
    <img src="	https://cdn.pixabay.com/photo/2016/08/31/11/54/icon-1633249_960_720.png" width="45" height="45" class="p-1"/>
    <h1> &nbsp Customers</h1>
</div>

<div class="d-flex flex-row justify-content-between align-items-center">
<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Customers" asp-action="Index" method="get">
    <p>
        Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
</div>

<div class="container">
    <div class="row">
@foreach (var item in Model) {        
            <div class="col-sm-3 my-3">
                <div class="card" style="border-block-color:#0d6efd">
                    <div class="card-header d-flex flex-row justify-content-between align-items-center p-1" style="background-color:#0d6efd">
                        
                           <h5 style="color:white">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <div><a asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pen-to-square" style="color:white; font-size:25px"></i>
                            </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash" style="color:white; font-size:25px"></i>
                        </a></div>
                    </div>
                    <div class="card-body d-flex flex-row justify-content-between align-items-center p-3">
                           <div>
                    <img src="https://i.pinimg.com/736x/89/90/48/899048ab0cc455154006fdb9676964b3.jpg" alt="Avatar" style="width:80px; height:100px">
             </div>
                        <div>
                            <h6 class="card-text ">@Html.DisplayFor(modelItem => item.Email)</h6>
                            <h6 class="card-text">@Html.DisplayFor(modelItem => item.City)</h6>
                            <h6 class="card-text">@Html.DisplayFor(modelItem => item.State)</h6>
                            <a asp-controller="Orders" asp-action="Details" asp-route-id="@item.Id">View Order</a>
                        </div>                    
                        
                       
                        
                        
                        </div>
                        </div>
                </div>
            
           }
     </div>
</div>

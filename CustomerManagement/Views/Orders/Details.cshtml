
@model IEnumerable<CustomerManagement.Models.Orders>

@{
    ViewData["Title"] = "Details";
}

<div class="d-inline-flex justify-content-between align-items-center my-3">
    <img src="	https://cdn.pixabay.com/photo/2016/08/31/11/54/icon-1633249_960_720.png" width="45" height="45" class="p-1"/>
    <h1> &nbsp Customer Information</h1>
</div>
<h4 class=" mt-5 mb-3">Orders for @ViewBag.customername</h4>

<table class="table table-striped">
    <tbody>
        
@foreach (var item in Model)
{<tr>
        <td colspan="10">
            @Html.DisplayFor(modelItem => item.OrderName)
        </td>
        <td >
            @Html.DisplayFor(modelItem => item.OrederPrice)
        </td>       
    </tr>
    }
        <tr style="font-weight:bold">
            <td colspan="10">Total</td>
        <td>
              @Model.Sum(i => i.OrederPrice)
        </td>
    </tr>
 
</tbody>
</table>




